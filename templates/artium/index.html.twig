{% extends 'base.html.twig' %}

{% block body %}
<div class="hero-section">
    <div class="overlay"></div> <!-- Fond noir semi-transparent -->

    <!-- Texte à gauche -->
    <div class="hero-content">
        <h1 class="background-text">ART</h1>
        <h2>Explore Art</h2>
        <p>Learn various artistic techniques, hone your skills, and unleash your creative potential</p>
    </div>

    <!-- Image à droite -->
    <div class="hero-image">
        <img src="{{ asset('img/img3.jpg') }}" alt="Art">
    </div>
</div>



<!-- SECTION OUR COURSES -->
<section id="courses" class="courses-section">
    <h2 class="section-title">Our Courses</h2>
    <div class="underline"></div>

    <div class="carousel-container">
        <button class="carousel-btn left-btn"><i class="fas fa-chevron-left"></i></button>

        <div class="carousel">
            {% for category in categories %}
            {% if category.name %}
                <div class="course"><a href="{{ path('category_courses', {'categoryName': category.name|url_encode}) }}" class="category-link" data-category="{{ category.name }}">
    {{ category.name }}
</a>

                    <i class="{{ category.icon }}"></i>  <!-- Icône dynamique -->
                </div>
                    {% endif %}

            {% endfor %}
        </div>

        <button class="carousel-btn right-btn"><i class="fas fa-chevron-right"></i></button>
    </div>
</section>

<section class="events-section">
    <h2 class="section-title">Upcoming Events</h2>
    <div class="underline"></div>

    <div class="events-container">
        <div class="event-card">
            <img src="{{ asset('img/img7.jpg') }}" alt="Art Workshop">
